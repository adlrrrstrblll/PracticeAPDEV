<div class="page-body">

    <div class="sidebar-area">
        <div class="sidebar-item">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/3/32/House_-_Delapouite_-_game-icons.svg/512px-House_-_Delapouite_-_game-icons.svg.png?20240117170031" />
            <strong>Home</strong>
        </div>
        <div class="sidebar-item">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/2/2f/Three-friends_-_Delapouite_-_game-icons.svg/512px-Three-friends_-_Delapouite_-_game-icons.svg.png?20240117171636" />
            <strong>Friends</strong>
        </div>
        <div class="sidebar-item">
            <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/94/304_Kosmona%C5%ADta_kasco.svg/512px-304_Kosmona%C5%ADta_kasco.svg.png?20230127143340" />
            <strong>Acquaintances</strong>
        </div>
    </div>

    <div class="post-area">
        {{#each posts}}
        <div class="post">
            <div class="post-title">{{this.title}}</div>
            <div class="post-banner">
                <img src="{{this.image}}" alt="{{this.title}}">
            </div>
            <div class="post-like">
                <img src="https://upload.wikimedia.org/wikipedia/commons/7/73/NotoSans_-_Reversed_Thumbs_Up_Sign_-_1F592.svg" />
                <img src="https://upload.wikimedia.org/wikipedia/commons/4/4e/NotoSans_-_Reversed_Thumbs_Down_Sign_-_1F593.svg" />
            </div>
        </div>
        {{/each}}
    </div>

    <div class="friends-area">
        <div class="friends">
            <div class="friend-header"><strong>Friends</strong></div>
            <div class="friend-parent">
                {{#each friends}}
                <div class="friend-item">
                    <img src="{{this.avatar}}" alt="{{this.name}}"><br/>
                    {{this.name}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>

</div>
